<%= content_for(:title, @list.name) %>

<p><%= link_to "Home", lists_path %></p>

<h1><%= @list.name %></h1>
<h4><%= @list.description %></h4>

<p><%= link_to "Edit", edit_list_path(@list) %></p>
<p><%= link_to "Delete", list_path(@list), data: {confirm: "Are you sure?", method: "delete"} %></p>

<p><%= link_to "Add a task", new_list_task_path(@list) %> </p>

<% if @list.tasks.any? %>
  <h4>Here are the tasks for this list:</h4>
  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> | 
        <%= link_to "Edit", edit_list_task_path(@list, task) %> </li> |
        <%= link_to "Delete", list_task_path(@list, task), data: {confirm: "Are you sure?", method: "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet.</p>
<% end %>
